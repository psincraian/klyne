{
  "name": "klyne-frontend",
  "version": "1.0.0",
  "description": "Frontend build system for Klyne package analytics",
  "scripts": {
    "build": "tailwindcss -i ./src/static/css/input.css -o ./src/static/css/output.css --minify",
    "dev": "tailwindcss -i ./src/static/css/input.css -o ./src/static/css/output.css --watch",
    "dev:server": "concurrently \"npm run dev\" \"uv run uvicorn src.main:app --reload --host 0.0.0.0 --port 8001\"",
    "clean": "rm -f ./src/static/css/output.css"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "concurrently": "^8.2.2",
    "tailwindcss": "^3.4.0"
  },
  "dependencies": {
    "daisyui": "^4.4.19"
  }
}