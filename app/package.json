{
  "name": "klyne-frontend",
  "version": "1.0.0",
  "description": "Frontend build system for Klyne package analytics",
  "scripts": {
    "build": "npm run copy:assets && vite build",
    "dev": "vite",
    "dev:server": "concurrently \"npm run dev\" \"uv run uvicorn src.main:app --reload --host 0.0.0.0 --port 8000\"",
    "copy:assets": "npm run copy:fonts",
    "copy:fonts": "npx cpx2 \"node_modules/@fortawesome/fontawesome-free/webfonts/**\" \"src/static/fonts\"",
    "clean": "rm -rf ./src/static/dist ./src/static/fonts",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "@vitejs/plugin-legacy": "^7.2.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "cpx2": "^8.0.0",
    "tailwindcss": "^3.4.0",
    "vite": "^7.1.2"
  },
  "dependencies": {
    "@fontsource/inter": "^5.2.6",
    "@fortawesome/fontawesome-free": "^7.0.0",
    "chart.js": "^3.9.1",
    "chartjs-adapter-date-fns": "^2.0.0",
    "daisyui": "^4.4.19",
    "date-fns": "^2.29.3"
  }
}
